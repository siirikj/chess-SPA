{
	"parser": "@babel/eslint-parser",
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"eslint-config-airbnb-base",
		"eslint-config-prettier",
		"plugin:react/recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"requireConfigFile": false,
		"parser": "@babel/eslint-parser"
	},
	"plugins": ["react", "jsx"],
	"rules": {
		"no-console": "off",
		"import/no-cycle": "off",
		"react/react-in-jsx-scope": "off",
		"react/prop-types": "off",
		"no-param-reassign": [
			"error",
			{
				"props": true,
				"ignorePropertyModificationsFor": ["state"]
			}
		]
	}
}
